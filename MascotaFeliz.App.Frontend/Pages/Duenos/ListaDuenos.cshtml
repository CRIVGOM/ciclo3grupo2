@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}

 <div class="contenido"> 
        <div class="fila">
            
            <div class="colconsulta">
                <strong class="logo-home">Listado de Propietarios</strong>
                <table class="table">
    <tr>
        <th>Nombres</th>
        <th>Apellidos</th> 
        <th>Direccion</th> 
        <th>Telefono</th> 
        <th>Correo</th> 
    </tr>
    @foreach (var dueno in Model.listaDuenos)
    {
        <tr>
            <td>@dueno.Nombres</td>
            <td>@dueno.Apellidos</td>
            <td>@dueno.Direccion</td>
            <td>@dueno.Telefono</td>
            <td>@dueno.Correo</td>
        
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesDuenos" asp-route-duenoId="@dueno.Id">
                    Detalle Dueno
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarDuenos" asp-route-duenoId="@dueno.Id">
                    Editar Dueno
                </a>
            </td>
            

        </tr>
    } 
</table>
<a class = "btn btn-primary table-btn" asp-page="./EditarDuenos" class="btn-default">Adicionar Dueño</a>
       
            </div>
            
        </div>
    </div>
